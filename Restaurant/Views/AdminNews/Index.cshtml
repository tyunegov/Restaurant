@model IEnumerable<Restaurant.Models.News.NewsModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container_news">
    @foreach (var item in Model)
    {
    <div class="news">
        <div class="container_description">
            <h2>Новость №@item.Id</h2>
            <div class="edit">
                <a asp-action="Edit" asp-route-id="@item.Id" class="form_a"></a>
            </div>
            <div class="delete">
                <a asp-action="Delete" asp-route-id="@item.Id" class="form_a"></a>
            </div>
        </div>
        <span>@Html.DisplayFor(modelItem => item.Description)</span>
        @Html.Raw("<img class=\"image_news\"' src=\"data:image/jpeg;base64,"
                                    + Convert.ToBase64String(item.Image) + "\" />")
    </div>
    }
</div>
