@model IEnumerable<Restaurant.Models.Menu.CategoryMenu>

@{
    ViewData["Title"] = "Menu";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="admin-menu">
    <tr>
        <th>Id</th>
        <th>Название</th>
        <th>Категория</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Type.Name</td>
            <td><a asp-action="EditMenu" asp-route-id="@item.Id">Edit</a></td>
        </tr>
    }
</table>



