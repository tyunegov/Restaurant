@model Restaurant.Models.Menu.CategoryMenu

<h2 class="admin_h2">@Model.Name</h2>
<form asp-action="EditCategory" asp-controller="AdminMenu" asp-antiforgery="true" method="post" class="editCategory">
    <input type="hidden" asp-for="Id" />
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <p>Тип меню:</p>
    @Html.DropDownListFor(model => model.TypeId, ViewBag.Types as SelectList, "Тип меню")
    <input type="submit" value="Сохранить" />
</form>
<form asp-action="DeleteCategory" method="get" class="editCategory">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Удалить" />
</form>   