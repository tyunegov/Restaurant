<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SkyLounge</title>
    <link rel="stylesheet" href="~/css/style.css"/>
</head>
<body>
    <header>
        <nav class="navigation">
            <ul>
                <li><a asp-area="" asp-controller="Main" asp-action="Index">Главная</a></li>
                <li><a asp-area="" asp-controller="Menu" asp-action="Index">Меню</a></li>
                <li><a asp-area="" asp-controller="News" asp-action="Index">Новости</a></li>
            </ul>
        </nav>
    </header>
    @RenderBody()

    @await Html.PartialAsync("_Footer")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("_ValidationScriptsPartial", required: false)
</body>
</html>
